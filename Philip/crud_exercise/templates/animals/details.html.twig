{% extends 'base.html.twig' %}
{% block body %}
    <div class="my-2 mx-auto w-75">
        <hr>
        <h2 class="text-center">{{animal.name}}</h2>
        <div class="d-flex flex-row justify-content-center">
            <img class='img-square rounded-circle m-2' src="{{ asset("pictures/") ~ animal.picture }}" alt="{{animal.name}}">
        </div>
        <ul class="list-group">
            <li class="list-group-item">Location: {{animal.location}}</li>
            <li class="list-group-item">Size: <strong>{{animal.size}}</strong></li>
            <li class="list-group-item">Age: {{animal.age}}</li>
            <li class="list-group-item">Hobbies: {{animal.hobbies}}</li>
            <li class="list-group-item">Breed: {{animal.breed}}</li>
            <li class="list-group-item">Status: <strong>{{animal.status}}</strong></li>
        </ul>
        <p>
            <q>{{animal.description}}</q>
        </p><br>
        <a class="btn btn-primary" href="/animals">Back to Animals</a>
    </div>
{% endblock %}